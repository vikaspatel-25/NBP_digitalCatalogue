<a href="/home/product?id=<%= product._id %>" class="product-card">
  <div class="card-image-container">
    <% if (product.images && product.images.length) { %>
      <img
        src="<%= product.images[0] %>"
        alt="<%= product.productName %>"
      />
    <% } else { %>
      <img
        src="/images/placeholder.png"
        alt="No product image"
      />
    <% } %>
  </div>

  <div class="card-content">
    <h3 class="product-name"><%= product.productName %></h3>

    <p class="product-caption" style="margin-top:10px;">
      <%= product.shortDescription || product.detailedDescription %>
    </p>

    <button 
      class="view-details-btn"
      onclick="window.location.href='/product?id=<%= product._id %>'"
      type="button"
    >
      View Details
    </button>
  </div>
</a>

<style>
  .product-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    border-radius: 10px;
    overflow: hidden;
    background: #ffffff;
    box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
    width: 100%;
  }

  .product-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 16px rgba(0,0,0,0.12);
  }

  .card-image-container {
    width: 100%;
    aspect-ratio: 4 / 3;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .card-image-container img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .card-content {
    padding: 12px;
    display: flex;
    flex-direction: column;
    gap: 6px;
    flex-grow: 1;
  }

  .product-name {
    font-size: 14px;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .product-caption {
    font-size: 12px;
    color: #555555;
    line-height: 1.4;
    margin: 10px 0 0 0;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1;
  }

  .view-details-btn {
    margin-top: 6px;
    align-self: flex-start;
    padding: 6px 10px;
    font-size: 11px;
    font-weight: 500;
    border-radius: 6px;
    border: none;
    background-color: #f37021;
    color: #ffffff;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .view-details-btn:hover {
    background-color: #d85f18;
  }
</style>
