      font-size: 14px;
    }

    .footer-address {
      font-size: 14px;
      line-height: 1.6;
      color: #bdbdbd;
      margin-bottom: 14px;
    }

    .footer-social {
      display: flex;
      gap: 14px;
      margin-top: 16px;
    }

    .footer-social a {
      display: inline-flex;
      width: 36px;
      height: 36px;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      border: 1px solid rgba(255,255,255,0.12);
      color: #ffffff;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .footer-social a:hover {
      background: rgba(255,255,255,0.08);
      transform: scale(1.1);
    }

    .footer-social svg {
      width: 20px;
      height: 20px;
      fill: #ffffff;
    }

    .footer-bottom {
      border-top: 1px solid rgba(255,255,255,0.12);
      padding: 18px 24px;
      text-align: center;
      font-size: 13px;
      color: #bdbdbd;
    }

    @media (max-width: 900px) {
      .footer-inner {
        grid-template-columns: 1fr;
