    }

    .footer-inner {
      max-width: 1400px;
      margin: 0 auto;
      padding: 56px 24px 40px;
      display: grid;
      grid-template-columns: 1.2fr 1fr 1fr;
      gap: 48px;
    }

    .footer-logo img {
      max-width: 180px;
      margin-bottom: 18px;
    }

    .footer-muted {
      color: #bdbdbd;
      font-size: 14px;
      line-height: 1.6;
    }

    .footer-section-title {
